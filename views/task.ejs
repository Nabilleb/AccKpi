<script>
// Global variables
let isLoading = false;
let currentTasks = [];
let currentPage = 1;
const tasksPerPage = 10;
const processId = "<%= workflowDetails.ProcessID %>";
const processSteps = <%- JSON.stringify(processSteps) %>;


const sortFunctions = {
