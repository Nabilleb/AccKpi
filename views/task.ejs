  department: (a, b) => (a.DeptName || '').localeCompare(b.DeptName || ''),
  duedate: (a, b) => new Date(a.PlannedDate) - new Date(b.PlannedDate),
  priority: (a, b) => (a.Priority ?? 0) - (b.Priority ?? 0),
