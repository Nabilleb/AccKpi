  <link rel="stylesheet" href="/css/all.min.css">
  <link rel="stylesheet" href="/styles/package.css">
  <link rel="stylesheet" href="/styles/packageform.css">
</head>
<body>
  <nav class="dashboard-nav">
    <div class="nav-header">
      <i class="fas fa-building"></i>
      <h2>Admin Panel</h2>
    </div>
    <ul class="nav-links">
      <li class="nav-item">
        <a href="/adminpage">
          <i class="fas fa-home"></i>
          <span>Dashboard</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/addUser">
          <i class="fas fa-user-plus"></i>
          <span>Add User</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/add-department">
          <i class="fas fa-building"></i>
          <span>Add Department</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/addProcess">
          <i class="fas fa-cogs"></i>
          <span>Add Process</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/addPackage">
          <i class="fas fa-box"></i>
          <span>Add Package</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/addProject">
          <i class="fas fa-project-diagram"></i>
          <span>Add Project</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/workFlowDash">
          <i class="fas fa-tasks"></i>
          <span>Workflows</span>
        </a>
      </li>
    </ul>
    <div class="nav-footer">
      <a href="/logout" class="logout-btn">
        <i class="fas fa-sign-out-alt"></i>
        <span>Logout</span>
      </a>
    </div>
  </nav>

  <div class="form-container">
    <div class="logo-header">
      <img src="/images/accLogo.jpeg" alt="Company Logo" class="company-logo">
      <h1>Add New Package</h1>
    </div>
    <form id="add-package-form" action="/addPackage" method="post">
      <div class="form-row">
        <label for="package-name">Package Name</label>
        <input type="text" id="packagename" name="packageName" required>
      </div>

      <div class="form-row">
        <label for="duration">Duration (Days)</label>
        <input type="number" id="duration" name="duration" min="1" required>
      </div>

      <div class="form-row">
        <label for="division">Division</label>
        <select id="division" name="division" required>
          <option value="">Select Division</option>
          <option value="engineering">Engineering</option>
          <option value="finance">Finance</option>
          <option value="hr">HR</option>
          <option value="marketing">Marketing</option>
        </select>
      </div>

      <div class="form-row">
        <label>Options</label>
        <div class="checkbox-container">
          <input type="checkbox" id="selected" name="selected">
          <label for="selected" class="no-margin">Selected</label>
        </div>
        <div class="checkbox-container">
          <input type="checkbox" id="standard" name="standard">
          <label for="standard" class="no-margin">Standard Package</label>
        </div>
        <div class="checkbox-container">
          <input type="checkbox" id="synched" name="synched">
          <label for="synched" class="no-margin">Synched with System</label>
        </div>
      </div>

      <div class="form-row full-width">
        <label for="trade">Trade(s)</label>
        <textarea id="trade" name="trade" rows="2" placeholder="Enter roles or specializations (e.g., Software, Civil)" required></textarea>
      </div>

      <div class="form-row full-width">
        <label for="file-upload">Upload File (PDF, DOCX, etc.)</label>
        <div class="file-upload-container">
          <input type="file" id="file-upload" name="fileUpload" accept=".pdf,.docx">
        </div>
      </div>

      <div class="form-actions">
        <button type="button" id="cancel-btn">Cancel</button>
        <button type="submit" id="save-btn">Save Package</button>
      </div>
    </form>
  </div>

  <!-- Success Modal -->
  <div id="success-modal" class="modal hidden">
    <div class="modal-content">
      <div class="modal-icon">
        <i class="fas fa-check-circle"></i>
      </div>
      <h2>Package Added Successfully</h2>
      <p>The package has been created and is ready to use.</p>
      <button id="modal-close-btn" class="modal-button">OK</button>
    </div>
  </div>

  <script src="/js/packageform.js"></script>
</body>
</html>