  <link rel="stylesheet" href="/css/all.min.css">
  <link rel="stylesheet" href="/styles/package.css">
  <link rel="stylesheet" href="/styles/packageform.css">
</head>
<body>
  <nav class="dashboard-nav">
    <div class="nav-header">
      <i class="fas fa-building"></i>
      <h2>Admin Panel</h2>
    </div>
    <ul class="nav-links">
      <li class="nav-item">
        <a href="/adminpage">
          <i class="fas fa-home"></i>
          <span>Dashboard</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/addUser">
          <i class="fas fa-user-plus"></i>
          <span>Add User</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/add-department">
          <i class="fas fa-building"></i>
          <span>Add Department</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/addProcess">
          <i class="fas fa-cogs"></i>
          <span>Add Process</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/addPackage">
          <i class="fas fa-box"></i>
          <span>Add Package</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/addProject">
          <i class="fas fa-project-diagram"></i>
          <span>Add Project</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/workFlowDash">
          <i class="fas fa-tasks"></i>
          <span>Workflows</span>
        </a>
      </li>
    </ul>
    <div class="nav-footer">
      <a href="/logout" class="logout-btn">
        <i class="fas fa-sign-out-alt"></i>
        <span>Logout</span>
      </a>
    </div>
  </nav>

  <div class="form-container">
    <div class="logo-header">
      <img src="/images/accLogo.jpeg" alt="Company Logo" class="company-logo">
      <h1>Add New Package</h1>
    </div>
    <form id="add-package-form" action="/addPackage" method="post">
      <div class="form-row">
        <label for="package-name">Package Name</label>
        <input type="text" id="packagename" name="packageName" required>
      </div>

      <div class="form-row">
        <label for="duration">Duration (Days)</label>
        <input type="number" id="duration" name="duration" min="1" required>
      </div>

      <div class="form-row">
        <label for="division">Division</label>
        <select id="division" name="division" required>
          <option value="">Select Division</option>
          <option value="engineering">Engineering</option>
          <option value="finance">Finance</option>
          <option value="hr">HR</option>
          <option value="marketing">Marketing</option>
        </select>
      </div>

      <div class="form-row">
        <label>Options</label>
        <div class="checkbox-container">
          <input type="checkbox" id="selected" name="selected">
          <label for="selected" style="margin-bottom:0">Selected</label>
        </div>
        <div class="checkbox-container">
          <input type="checkbox" id="standard" name="standard">
          <label for="standard" style="margin-bottom:0">Standard Package</label>
        </div>
        <div class="checkbox-container">
          <input type="checkbox" id="synched" name="synched">
          <label for="synched" style="margin-bottom:0">Synched with System</label>
        </div>
      </div>

      <div class="form-row full-width">
        <label for="trade">Trade(s)</label>
        <textarea id="trade" name="trade" rows="2" placeholder="Enter roles or specializations (e.g., Software, Civil)" required></textarea>
      </div>

      <div class="form-row full-width">
        <label for="file-upload">Upload File (PDF, DOCX, etc.)</label>
        <div class="file-upload-container">
          <input type="file" id="file-upload" name="fileUpload" accept=".pdf,.docx">
        </div>
      </div>

      <div class="form-actions">
        <button type="button" id="cancel-btn">Cancel</button>
        <button type="submit" id="save-btn">Save Package</button>
      </div>
    </form>
  </div>

  <!-- Success Modal -->
  <div id="success-modal" class="modal hidden">
    <div class="modal-content">
      <div class="modal-icon">
        <i class="fas fa-check-circle"></i>
      </div>
      <h2>Package Added Successfully</h2>
      <p>The package has been created and is ready to use.</p>
      <button id="modal-close-btn" class="modal-button">OK</button>
    </div>
  </div>

  <style>
    /* Modal Styles */
    .modal {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 2000;
      animation: fadeIn 0.3s ease;
    }

    .modal.hidden {
      display: none;
    }

    .modal-content {
      background: white;
      border-radius: 12px;
      padding: 2rem;
      text-align: center;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      max-width: 400px;
      animation: slideUp 0.3s ease;
    }

    .modal-icon {
      font-size: 3rem;
      color: #10b981;
      margin-bottom: 1rem;
      animation: scaleIn 0.4s ease;
    }

    .modal-content h2 {
      color: #1e293b;
      margin: 0.5rem 0;
      font-size: 1.5rem;
    }

    .modal-content p {
      color: #64748b;
      margin: 1rem 0 1.5rem;
      font-size: 0.95rem;
    }

    .modal-button {
      background-color: #2563eb;
      color: white;
      border: none;
      padding: 0.75rem 2rem;
      border-radius: 6px;
      font-size: 1rem;
      cursor: pointer;
      transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .modal-button:hover {
      background-color: #1d4ed8;
      transform: translateY(-2px);
      box-shadow: 0 10px 15px rgba(37, 99, 235, 0.3);
    }

    .modal-button:active {
      transform: translateY(0);
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }

    @keyframes slideUp {
      from {
        transform: translateY(20px);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }

    @keyframes scaleIn {
      from {
        transform: scale(0);
      }
      to {
        transform: scale(1);
      }
    }
  </style>

  <script src="/js/packageform.js"></script>
</body>
</html>