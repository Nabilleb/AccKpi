<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Package</title>
  <link rel="stylesheet" href="/css/all.min.css">
  <link rel="stylesheet" href="/styles/package.css">
  <style>
    :root {
      --primary: #2563eb;
      --primary-light: #dbeafe;
      --primary-lighter: #eff6ff;
      --primary-dark: #1d4ed8;
      --text: #1e293b;
      --text-light: #64748b;
      --border: #e2e8f0;
      --background: #f8fafc;
      --white: #ffffff;
      --transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    }

    * {
      box-sizing: border-box;
    }

    body {
      margin-left: 250px;
      background-color: var(--background);
    }

    /* Navbar Styles */
    .dashboard-nav {
      background: var(--white);
      height: 100vh;
      width: 250px;
      position: fixed;
      left: 0;
      top: 0;
      box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
      display: flex;
      flex-direction: column;
      z-index: 1000;
    }

    .nav-header {
      padding: 1.5rem;
      border-bottom: 1px solid var(--border);
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .nav-header i {
      font-size: 1.5rem;
      color: var(--primary);
    }

    .nav-header h2 {
      margin: 0;
      font-size: 1.25rem;
      color: var(--text);
      font-weight: 600;
    }

    .nav-links {
      list-style: none;
      padding: 1rem 0;
      flex-grow: 1;
      overflow-y: auto;
    }

    .nav-item {
      margin: 0.25rem 0;
    }

    .nav-item a {
      display: flex;
      align-items: center;
      padding: 0.75rem 1.5rem;
      color: var(--text-light);
      text-decoration: none;
      transition: var(--transition);
    }

    .nav-item a:hover {
      background: var(--primary-lighter);
      color: var(--primary);
    }

    .nav-item a i {
      margin-right: 0.75rem;
      width: 20px;
      text-align: center;
    }

    .nav-footer {
      padding: 1rem;
      border-top: 1px solid var(--border);
    }

    .logout-btn {
      display: flex;
      align-items: center;
      padding: 0.75rem 1.5rem;
      color: var(--text-light);
      text-decoration: none;
      transition: var(--transition);
      border-radius: 6px;
    }

    .logout-btn:hover {
      background: #fee2e2;
      color: #dc2626;
    }

    .logout-btn i {
      margin-right: 0.75rem;
      width: 20px;
      text-align: center;
    }

    .form-container {
      margin-left: 0;
      padding: 2rem;
      max-width: 900px;
    }

    @media (max-width: 768px) {
      body {
        margin-left: 0;
      }

      .dashboard-nav {
        width: 100%;
        height: auto;
        position: relative;
        flex-direction: row;
        flex-wrap: wrap;
      }

      .nav-header {
        width: 100%;
      }

      .nav-links {
        display: flex;
        flex-wrap: wrap;
        padding: 0;
        flex-grow: 0;
      }

      .nav-item {
        flex: 1;
        min-width: 120px;
        margin: 0;
      }

      .nav-footer {
        width: 100%;
      }
    }
  </style>
</head>
<body>
  <nav class="dashboard-nav">
    <div class="nav-header">
      <i class="fas fa-building"></i>
      <h2>Admin Panel</h2>
    </div>
    <ul class="nav-links">
      <li class="nav-item">
        <a href="/adminpage">
          <i class="fas fa-home"></i>
          <span>Dashboard</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/addUser">
          <i class="fas fa-user-plus"></i>
          <span>Add User</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/add-department">
          <i class="fas fa-building"></i>
          <span>Add Department</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/addProcess">
          <i class="fas fa-cogs"></i>
          <span>Add Process</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/addPackage">
          <i class="fas fa-box"></i>
          <span>Add Package</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/addProject">
          <i class="fas fa-project-diagram"></i>
          <span>Add Project</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/workFlowDash">
          <i class="fas fa-tasks"></i>
          <span>Workflows</span>
        </a>
      </li>
    </ul>
    <div class="nav-footer">
      <a href="/logout" class="logout-btn">
        <i class="fas fa-sign-out-alt"></i>
        <span>Logout</span>
      </a>
    </div>
  </nav>

  <div class="form-container">
    <div class="logo-header">
      <img src="/images/accLogo.jpeg" alt="Company Logo" class="company-logo">
      <h1>Add New Package</h1>
    </div>
    <form id="add-package-form" action="/addPackage" method="post">
      <div class="form-row">
        <label for="package-name">Package Name</label>
        <input type="text" id="packagename" name="packageName" required>
      </div>

      <div class="form-row">
        <label for="duration">Duration (Days)</label>
        <input type="number" id="duration" name="duration" min="1" required>
      </div>

      <div class="form-row">
        <label for="division">Division</label>
        <select id="division" name="division" required>
          <option value="">Select Division</option>
          <option value="engineering">Engineering</option>
          <option value="finance">Finance</option>
          <option value="hr">HR</option>
          <option value="marketing">Marketing</option>
        </select>
      </div>

      <div class="form-row">
        <label>Options</label>
        <div class="checkbox-container">
          <input type="checkbox" id="selected" name="selected">
          <label for="selected" style="margin-bottom:0">Selected</label>
        </div>
        <div class="checkbox-container">
          <input type="checkbox" id="standard" name="standard">
          <label for="standard" style="margin-bottom:0">Standard Package</label>
        </div>
        <div class="checkbox-container">
          <input type="checkbox" id="synched" name="synched">
          <label for="synched" style="margin-bottom:0">Synched with System</label>
        </div>
      </div>

      <div class="form-row full-width">
        <label for="trade">Trade(s)</label>
        <textarea id="trade" name="trade" rows="2" placeholder="Enter roles or specializations (e.g., Software, Civil)" required></textarea>
      </div>

      <div class="form-row full-width">
        <label for="file-upload">Upload File (PDF, DOCX, etc.)</label>
        <div class="file-upload-container">
          <input type="file" id="file-upload" name="fileUpload" accept=".pdf,.docx">
        </div>
      </div>

      <div class="form-actions">
        <button type="button" id="cancel-btn">Cancel</button>
        <button type="submit" id="save-btn">Save Package</button>
      </div>
    </form>
  </div>

  <!-- Success Modal -->
  <div id="success-modal" class="modal hidden">
    <div class="modal-content">
      <div class="modal-icon">
        <i class="fas fa-check-circle"></i>
      </div>
      <h2>Package Added Successfully</h2>
      <p>The package has been created and is ready to use.</p>
      <button id="modal-close-btn" class="modal-button">OK</button>
    </div>
  </div>

  <style>
    /* Modal Styles */
    .modal {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 2000;
      animation: fadeIn 0.3s ease;
    }

    .modal.hidden {
      display: none;
    }

    .modal-content {
      background: white;
      border-radius: 12px;
      padding: 2rem;
      text-align: center;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      max-width: 400px;
      animation: slideUp 0.3s ease;
    }

    .modal-icon {
      font-size: 3rem;
      color: #10b981;
      margin-bottom: 1rem;
      animation: scaleIn 0.4s ease;
    }

    .modal-content h2 {
      color: #1e293b;
      margin: 0.5rem 0;
      font-size: 1.5rem;
    }

    .modal-content p {
      color: #64748b;
      margin: 1rem 0 1.5rem;
      font-size: 0.95rem;
    }

    .modal-button {
      background-color: #2563eb;
      color: white;
      border: none;
      padding: 0.75rem 2rem;
      border-radius: 6px;
      font-size: 1rem;
      cursor: pointer;
      transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .modal-button:hover {
      background-color: #1d4ed8;
      transform: translateY(-2px);
      box-shadow: 0 10px 15px rgba(37, 99, 235, 0.3);
    }

    .modal-button:active {
      transform: translateY(0);
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }

    @keyframes slideUp {
      from {
        transform: translateY(20px);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }

    @keyframes scaleIn {
      from {
        transform: scale(0);
      }
      to {
        transform: scale(1);
      }
    }
  </style>

  <script>
    const form = document.getElementById('add-package-form');
    const successModal = document.getElementById('success-modal');
    const modalCloseBtn = document.getElementById('modal-close-btn');
    const cancelBtn = document.getElementById('cancel-btn');

    // Form submission handler
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const formDataObj = new FormData(form);
      
      // Convert FormData to JSON object
      const jsonData = {
        packageName: formDataObj.get('packageName'),
        duration: parseInt(formDataObj.get('duration')) || 0,
        division: formDataObj.get('division'),
        selected: formDataObj.get('selected') ? 1 : 0,
        standard: formDataObj.get('standard') ? 1 : 0,
        synched: formDataObj.get('synched') ? 1 : 0,
        trade: formDataObj.get('trade'),
        'file-upload': formDataObj.get('fileUpload')?.name || null
      };

      // Validate required fields
      if (!jsonData.packageName || !jsonData.duration || !jsonData.division || !jsonData.trade) {
        alert('Please fill in all required fields.');
        return;
      }

      try {
        const response = await fetch('/addPackage', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(jsonData)
        });

        const responseData = await response.json().catch(() => ({}));

        if (response.ok) {
          // Show success modal
          successModal.classList.remove('hidden');
        } else {
          const errorMsg = responseData.error || 'Failed to add package. Please try again.';
          alert(errorMsg);
        }
      } catch (error) {
        console.error('Error:', error);
        alert('An error occurred while adding the package: ' + error.message);
      }
    });

    // Modal close button
    modalCloseBtn.addEventListener('click', () => {
      successModal.classList.add('hidden');
      form.reset();
      // Redirect to admin page after closing
      setTimeout(() => {
        window.location.href = '/adminpage';
      }, 300);
    });

    // Cancel button
    cancelBtn.addEventListener('click', () => {
      window.location.href = '/adminpage';
    });

    // Close modal when clicking outside of it
    successModal.addEventListener('click', (e) => {
      if (e.target === successModal) {
        successModal.classList.add('hidden');
        form.reset();
        setTimeout(() => {
          window.location.href = '/adminpage';
        }, 300);
      }
    });
  </script>

</body>
</html>