<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Package</title>
    <link rel="stylesheet" href="/css/all.min.css">
    <link rel="stylesheet" href="/fonts/inter/inter.css">
    <link rel="stylesheet" href="/styles/addpackageform.css">
</head>
<body>
    <div class="container">
        <button id="back-btn" class="back-btn">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M20 11H7.83L13.42 5.41L12 4L4 12L12 20L13.41 18.59L7.83 13H20V11Z" fill="currentColor"/>
            </svg>
            Back
        </button>

        <h1>
            <i class="fas fa-plus-circle"></i>
            Add New workflow
        </h1>

        <div id="alert-message" class="alert">
            <i class="fas fa-check-circle"></i>
            <span id="alert-text"></span>
        </div>

        <form id="add-package-form">
            <div class="form-section">
                <h2 class="section-title">Workflow Setup</h2>
                <div class="form-grid">
                    <div class="form-group">
                        <label for="process-id">New Workflow</label>
                        <select id="process-id" class="form-control" required>
                            <option value="">Select New Workflow</option>
                            <% processes.forEach(process => { %>
                                <option value="<%= process.NumberOfProccessID %>"><%= process.ProcessName %></option>
                            <% }) %>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="package-id">Package</label>
                        <select id="package-id" class="form-control" required>
                            <option value="">Select Package</option>
                            <% packages.forEach(pkg => { %>
                                <option value="<%= pkg.PkgeID %>" <% if(typeof selectedPackageId !== 'undefined' && selectedPackageId == pkg.PkgeID) { %>selected<% } %>><%= pkg.PkgeName %></option>
                            <% }) %>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="startDate">Start Date</label>
                        <input type="date" id="startDate" name="startDate" class="form-control" required>
                    </div>
                </div>
            </div>

            <div class="form-section">
                <h2 class="section-title">Supplier Information</h2>
                <div class="form-grid">
                    <div class="form-group">
                        <label for="supplier-type">Supplier Type</label>
                        <select id="supplier-type" class="form-control" required>
                            <option value="">Select Type</option>
                            <option value="Subcontractor">Subcontractor</option>
                            <option value="Supplier">Supplier</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="total-payment">Total Payment</label>
                        <input type="number" id="total-payment" name="total-payment" class="form-control" placeholder="Enter amount" step="0.01" min="0" required>
                    </div>

                    <div class="form-group">
                        <label for="supplier-name">Subcontractor/Supplier Name</label>
                        <select id="supplier-name" class="form-control" required>
                            <option value="">Select Subcontractor/Supplier</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Location Type</label>
                        <div class="location-options">
                            <div class="location-option">
                                <input type="radio" id="location-local" name="supplier-location" value="Local" required>
                                <label for="location-local">Local</label>
                            </div>
                            <div class="location-option">
                                <input type="radio" id="location-international" name="supplier-location" value="International" required>
                                <label for="location-international">International</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group" id="payment-installments-group" style="display: none;">
                        <label>Number of Payments</label>
                        <div class="payment-checkboxes">
                            <div class="payment-checkbox-item">
                                <input type="radio" id="payment-1" name="payment-installments" value="1">
                                <label for="payment-1">1 Payment</label>
                            </div>
                            <div class="payment-checkbox-item">
                                <input type="radio" id="payment-2" name="payment-installments" value="2">
                                <label for="payment-2">2 Payments</label>
                            </div>
                            <div class="payment-checkbox-item">
                                <input type="radio" id="payment-3" name="payment-installments" value="3">
                                <label for="payment-3">3 Payments</label>
                            </div>
                            <div class="payment-checkbox-item">
                                <input type="radio" id="payment-4" name="payment-installments" value="4">
                                <label for="payment-4">4 Payments</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="status-badge status-pending">
                    <i class="fas fa-clock"></i>
                    Pending
                </div>
                <input type="hidden" id="status" value="Pending">
            </div>

            <div class="button-group">
                <button id="cancel-btn" type="button" class="btn btn-secondary">
                    <i class="fas fa-times"></i>
                    Cancel
                </button>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i>
                    Save workflow
                </button>
            </div>
        </form>
    </div>

    <!-- Store selected project ID from login -->
    <input type="hidden" id="selectedProjectID" value="<%= locals.projectID %>">

    <script src="/js/addpackageform.js"></script>
</body>
</html>
