<script>
// Global variables
let allWorkflows = [];
let filteredWorkflows = [];
let currentPage = 1;
const rowsPerPage = 10;
let sortColumn = 'HdrID';
let sortDirection = 'asc';
let debounceTimer;
let pendingAction = null;

// DOM elements
const searchInput = document.getElementById('searchInput');
