        </div>

        <div class="filters">
            <div class="filter-group">
                <label class="filter-label">Project</label>
                <select id="projectFilter">
                    <option value="">All Projects</option>
                    <% projects.forEach(project => { %>
                        <option value="<%= project.projectID %>"><%= project.projectName %></option>
                    <% }) %>
