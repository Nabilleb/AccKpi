                            <div class="th-inner">
                                Status
                                <span class="sort-icon" data-sort="Status">
                                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M7 10L12 15L17 10H7Z" fill="currentColor"/>
                                    </svg>
                                </span>
                            </div>
