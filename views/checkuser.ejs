<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Management</title>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/all.min.css">
  <link rel="stylesheet" href="/styles/checkuser.css">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar">
    <div class="navbar-content">
      <div class="navbar-title">
        <i class="fas fa-users"></i> User Management
      </div>
      <div class="navbar-user">
        <div class="user-info">
          <div class="user-name"><%= desc_user %></div>
          <div class="user-role"><%= user.usrAdmin ? 'Administrator' : 'User' %></div>
        </div>
        <a href="/logout" class="btn-logout">
          <i class="fas fa-sign-out-alt"></i> Logout
        </a>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container">
    <div class="header">
      <h1>Users Directory</h1>
      <a href="/adminpage" class="btn-back">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
      </a>
    </div>

    <!-- Statistics -->
    <div class="stats">
      <div class="stat-card">
        <div class="stat-number"><%= users.length %></div>
        <div class="stat-label">Total Users</div>
      </div>
      <div class="stat-card">
        <div class="stat-number"><%= users.filter(u => u.usrAdmin).length %></div>
        <div class="stat-label">Administrators</div>
      </div>
      <div class="stat-card">
        <div class="stat-number"><%= users.filter(u => !u.usrAdmin).length %></div>
        <div class="stat-label">Regular Users</div>
      </div>
    </div>

    <!-- Search Box -->
    <div class="search-box">
      <input 
        type="text" 
        class="search-input" 
        id="userSearch" 
        placeholder="Search by ID, name, email, or department..."
      >
    </div>

    <!-- Users Table -->
    <div class="users-container">
      <% if (users && users.length > 0) { %>
        <table class="users-table">
          <thead>
            <tr>
              <th>User ID</th>
              <th>Name</th>
              <th>Role</th>
              <th>Status</th>
              <th>Email</th>
              <th>Department</th>
              <th>Join Date</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="usersTableBody">
            <% users.forEach(u => { 
              const isCurrentUser = String(u.usrID) === String(currentUserId);
            %>
              <tr class="user-row <%= isCurrentUser ? 'current-user' : '' %>" data-userid="<%= u.usrID %>" data-searchtext="<%= (u.usrID + ' ' + u.usrDesc + ' ' + (u.usrEmail || '') + ' ' + (u.DeptName || '')).toLowerCase() %>">
                <td>
                  <strong><%= u.usrID %></strong>
                  <% if (isCurrentUser) { %>
                    <span style="margin-left: 0.5rem; background-color: #fbbf24; color: #78350f; padding: 0.2rem 0.5rem; border-radius: 4px; font-size: 0.75rem; font-weight: 600;">YOU</span>
                  <% } %>
                </td>
                <td><%= u.usrDesc %></td>
                <td>
                  <% if (u.usrAdmin) { %>
                    <span class="badge badge-admin">
                      <i class="fas fa-shield-alt"></i> Admin
                    </span>
                  <% } else { %>
                    <span class="badge badge-user">
                      <i class="fas fa-user"></i> User
                    </span>
                  <% } %>
                </td>
                <td>
                  <% if (u.usrAdmin) { %>
                    <span class="badge badge-admin">
                      <i class="fas fa-shield-alt"></i> Admin
                    </span>
                  <% } else if (u.IsSpecialUser) { %>
                    <span class="badge badge-special">
                      <i class="fas fa-star"></i> Special User
                    </span>
                  <% } else { %>
                    <span class="text-dark">Regular</span>
                  <% } %>
                </td>
                <td>
                  <% if (u.usrEmail) { %>
                    <a href="mailto:<%= u.usrEmail %>" class="link-primary">
                      <%= u.usrEmail %>
                    </a>
                  <% } else { %>
                    <span class=\"text-light\">N/A</span>
                  <% } %>
                </td>
                <td>
                  <% if (u.DeptName) { %>
                    <span class="badge badge-dept">
                      <%= u.DeptName %>
                    </span>
                  <% } else { %>
                    <span class="text-dark">No Department</span>
                  <% } %>
                </td>
                <td>
                  <% if (u.insertDate) { %>
                    <%= new Date(u.insertDate).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                  <% } else { %>
                    <span class=\"text-light\">N/A</span>
                  <% } %>
                </td>
                <td class="actions-column">
                  <% if (!isCurrentUser) { %>
                    <% if (!u.usrAdmin) { %>
                      <button class="btn-action btn-admin" data-action="grant-admin" data-userid="<%= u.usrID %>" data-username="<%= u.usrDesc %>">
                        <i class="fas fa-crown"></i> Make Admin
                      </button>
                    <% } else { %>
                      <button class="btn-action btn-danger" data-action="revoke-admin" data-userid="<%= u.usrID %>" data-username="<%= u.usrDesc %>">
                        <i class="fas fa-times"></i> Remove Admin
                      </button>
                    <% } %>
                    <% if (!u.IsSpecialUser) { %>
                      <button class="btn-action btn-special" data-action="grant-special" data-userid="<%= u.usrID %>" data-username="<%= u.usrDesc %>">
                        <i class="fas fa-star"></i> Special
                      </button>
                    <% } else { %>
                      <button class="btn-action btn-secondary" data-action="revoke-special" data-userid="<%= u.usrID %>" data-username="<%= u.usrDesc %>">
                        <i class="fas fa-times"></i> Regular
                      </button>
                    <% } %>
                  <% } else { %>
                    <span class="text-light">-</span>
                  <% } %>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <div class="no-users">
          <i class="fas fa-inbox"></i>
          <p>No users found</p>
        </div>
      <% } %>
    </div>
  </div>

  <script src="/js/permissions.js"></script>
  <script src="/js/checkuser.js"></script>
</body>
</html>
