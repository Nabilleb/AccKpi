<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sub Package Management</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/all.min.css">
    <link rel="stylesheet" href="/fonts/inter/inter.css">
    <link rel="stylesheet" href="/styles/subpackage.css">
</head>
<body>
    <!-- Navbar -->
    <div class="navbar">
        <div class="navbar-content">
            <h2 class="navbar-title">
                <i class="fas fa-cube"></i>
                AccKPI Sub Package Management
            </h2>
            <div class="navbar-user">
                <span><%= desc_user %></span>
                <a href="/logout" class="back-btn">
                    <i class="fas fa-sign-out-alt"></i>
                    Logout
                </a>
            </div>
        </div>
    </div>

    <!-- Main Container -->
    <div class="container">
        <a href="/workFlowDash" class="back-btn">
            <i class="fas fa-arrow-left"></i>
            Back to Dashboard
        </a>

        <div class="header">
            <h1>
                <i class="fas fa-boxes"></i>
                Sub Package Management
            </h1>
            <p>Add and manage sub packages for your projects</p>
        </div>
        <!-- Alert Message -->
        <div id="alertMessage" class="alert hidden">
            <i class="fas fa-check-circle"></i>
            <span id="alertText"></span>
        </div>
        <!-- Form Card -->
        <div class="card">
            <div class="card-header">
                <h2>Add New Sub Package</h2>
            </div>
            <div class="card-body">
                <form id="subpackageForm">
                    <!-- Item Description -->
                    <div class="form-group">
                        <label for="itemDescription">Item Description *</label>
                        <textarea 
                            id="itemDescription" 
                            class="form-control" 
                            placeholder="Enter detailed description of the item" 
                            required
                        ></textarea>
                    </div>

                    <!-- Package Selection -->
                    <div class="form-group">
                        <label for="packageId">Package *</label>
                        <select id="packageId" class="form-control" required>
                            <option value="">Select a Package</option>
                            <% if (packages && packages.length > 0) { %>
                                <% packages.forEach(pkg => { %>
                                    <option value="<%= pkg.PkgeID %>"><%= pkg.PkgeName %></option>
                                <% }) %>
                            <% } %>
                        </select>
                    </div>

                    <!-- Supplier Name -->
                    <div class="form-group">
                        <label for="supplierName">Supplier Name *</label>
                        <input 
                            type="text" 
                            id="supplierName" 
                            class="form-control" 
                            placeholder="Enter supplier name" 
                            required
                        >
                    </div>

                    <!-- Supplier/Contractor Type -->
                    <div class="form-group">
                        <label for="supplierContractorType">Supplier/Contractor Type *</label>
                        <select id="supplierContractorType" class="form-control" required>
                            <option value="">Select Type</option>
                            <option value="Supplier">Supplier</option>
                            <option value="Subcontractor">Subcontractor</option>
                        </select>
                    </div>

                    <!-- Supplier/Contractor Name -->
                    <div class="form-group">
                        <label for="supplierContractorName">Supplier/Contractor Name *</label>
                        <input 
                            type="text" 
                            id="supplierContractorName" 
                            class="form-control" 
                            placeholder="Enter supplier/contractor name" 
                            required
                        >
                    </div>

                    <!-- Award Value and Currency -->
                    <div class="form-row">
                        <div class="form-group">
                            <label for="awardValue">Award Value *</label>
                            <input 
                                type="number" 
                                id="awardValue" 
                                class="form-control" 
                                placeholder="0.00" 
                                step="0.01" 
                                min="0" 
                                required
                            >
                        </div>

                        <div class="form-group">
                            <label for="currency">Currency *</label>
                            <select id="currency" class="form-control" required>
                                <option value="">Select Currency</option>
                                <option value="USD">USD - US Dollar</option>
                                <option value="EUR">EUR - Euro</option>
                                <option value="GBP">GBP - British Pound</option>
                                <option value="AED">AED - UAE Dirham</option>
                                <option value="SAR">SAR - Saudi Riyal</option>
                                <option value="KWD">KWD - Kuwaiti Dinar</option>
                                <option value="QAR">QAR - Qatari Riyal</option>
                            </select>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="button-group">
                        <button type="reset" class="btn btn-secondary">
                            <i class="fas fa-redo"></i>
                            Clear
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i>
                            Save Sub Package
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Toast Notification -->
    <div id="toast" class="toast hidden">
        <i class="fas fa-check-circle"></i>
        <span id="toastMessage">Operation completed successfully</span>
    </div>

    <script src="/js/subpackage.js"></script>
</body>
</html>
