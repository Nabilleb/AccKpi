<section class="tasks-section">
  <h2 class="section-title">
    <i class="fas fa-tasks"></i>
    My Tasks
  </h2>
  <table class="tasks-table">
    <thead>
      <tr>
        <th>Task Name</th>
        <th>Task Description</th>
