<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Engineering Project Dashboard</title>
<link rel="stylesheet" href="/css/all.min.css">
<link rel="stylesheet" href= "/styles/admin.css">

</head>
<body>
  <header class="dashboard-header">
    <img src="/images/accNewLog.webp" alt="Company Logo" class="logo" />
    <div class="header-right">
      <p class="user-info">Welcome <%=desc_user %> (Admin)</p>
      <a href="/logout" class="logout-btn">
        <i class="fas fa-sign-out-alt"></i> Log out
      </a>
    </div>
  </header>

  <main class="main-content">
    <section class="quick-actions">
      <h3 class="section-title"><i class="fas fa-bolt"></i> Quick Actions</h3>
      <div class="actions-grid">
        <a href="/addPackage" class="action-btn action-package" title="Create a new package">
          <i class="fas fa-box-open"></i>
          <span class="btn-label">Add Package</span>
          <span class="btn-subtitle">New procurement</span>
        </a>
        <a href="/addProcess" class="action-btn action-process" title="Setup a new process">
          <i class="fas fa-cogs"></i>
          <span class="btn-label">Add Process</span>
          <span class="btn-subtitle">Define workflow</span>
        </a>
        <a href="/add-department" class="action-btn action-department" title="Create a new department">
          <i class="fas fa-sitemap"></i>
          <span class="btn-label">Add Department</span>
          <span class="btn-subtitle">Organization</span>
        </a>
        <a href="/addUser" class="action-btn action-user" title="Invite a new user">
          <i class="fas fa-user-plus"></i>
          <span class="btn-label">Add User</span>
          <span class="btn-subtitle">Team member</span>
        </a>
        <a href="/check-users" class="action-btn action-view-users" title="View all users">
          <i class="fas fa-users"></i>
          <span class="btn-label">View Users</span>
          <span class="btn-subtitle">User directory</span>
        </a>
        <a href="/workFlowDash" class="action-btn action-workflow" title="Create a new workflow">
          <i class="fas fa-tasks"></i>
          <span class="btn-label">Add Workflow</span>
          <span class="btn-subtitle">Task management</span>
        </a>
        <a href="/addProject" class="action-btn action-project" title="Start a new project">
          <i class="fas fa-project-diagram"></i>
          <span class="btn-label">Add Project</span>
          <span class="btn-subtitle">New initiative</span>
        </a>
      </div>
    </section>
    
    <section class="process-table-container">
      <h3 class="section-title"><i class="fas fa-cogs"></i> Process Management</h3>
      <table class="process-table">
        <thead>
          <tr>
            <th data-sort="id">ID</th>
            <th data-sort="name">Process Name</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% processes.forEach(process => { %>
          <tr onclick="viewProcessFlow(<%= process.NumberOfProccessID %>, '<%= process.ProcessName %>')">
            <td class="process-id">#<%= process.NumberOfProccessID %></td>
            <td class="process-name"><%= process.ProcessName %></td>
            <td class="process-desc"><%= process.processDesc || 'No description provided.' %></td>
            <td onclick="event.stopPropagation()">
              <div class="action-buttons">
                <button class="view-process-btn" onclick="viewProcessFlow(<%= process.NumberOfProccessID %>, '<%= process.ProcessName %>')">
                  <i class="fas fa-project-diagram"></i> View Flow
                </button>
                <button class="edit-btn" onclick="editProcess(<%= process.NumberOfProccessID %>)">
                  <i class="fas fa-edit"></i> Edit
                </button>
                <button class="task-btn" onclick="goToTask(<%= process.NumberOfProccessID %>)">
                  <i class="fas fa-tasks"></i> Task
                </button>
              </div>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <div class="departmentFlow">
        <h3 id="selectedProcessTitle" style="margin-top: 2rem;"></h3>
        <div id="departmentFlowGrid" class="department-flow-grid" data-department-id=""></div>
      </div>
    </section>

    <section class="activity-table">
      <h3 id="activityTitle" class="section-title"><i class="fas fa-clipboard-list"></i> Procurement Activities</h3>
      <div class="filters-container">
        <input type="text" id="taskSearchInput" placeholder="Search tasks...">
        <div class="filter-group">
          <label class="filter-label">Status:</label>
          <select class="filter-select" id="statusFilter">
            <option value="all">All Statuses</option>
            <option value="pending">Pending</option>
            <option value="on-time">On Time</option>
            <option value="delayed">Delayed</option>
          </select>
        </div>
        <div class="filter-group">
          <label class="filter-label">Sort By:</label>
          <select class="filter-select" id="sortFilter">
            <option value="name">Task Name</option>
            <option value="planned-date">Planned Date</option>
            <option value="finished-date">Finished Date</option>
            <option value="delay">Delay Days</option>
          </select>
        </div>
      </div>
      <table>
        <thead>
          <tr>
            <th data-sort="task">Task Name</th>
            <th data-sort="planned">Task Description</th>
            <th data-sort="days">Days Required</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody class="taskgrid">
        </tbody>
      </table>
    </section>
  </main>
<script src="/js/adminpage.js"></script>
<script>
  function editProcess(processID) {
    // Navigate to the edit process page
    window.location.href = `/editProcess/${processID}`;
  }

  function goToTask(processID) {
    // Navigate to add-task page with process ID
    window.location.href = `/add-task?processId=${processID}`;
  }
</script>
</body>
</html>