<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add New Project</title>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/all.min.css">
  <link rel="stylesheet" href="/styles/project.css">
</head>
<body>
  <nav class="dashboard-nav">
    <div class="nav-header">
      <i class="fas fa-building"></i>
      <h2>Admin Panel</h2>
    </div>
    <ul class="nav-links">
      <li class="nav-item">
        <a href="/adminpage">
          <i class="fas fa-home"></i>
          <span>Dashboard</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/addUser">
          <i class="fas fa-user-plus"></i>
          <span>Add User</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/add-department">
          <i class="fas fa-building"></i>
          <span>Add Department</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/addProcess">
          <i class="fas fa-cogs"></i>
          <span>Add Process</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/addPackage">
          <i class="fas fa-box"></i>
          <span>Add Package</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/addProject">
          <i class="fas fa-project-diagram"></i>
          <span>Add Project</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/workFlowDash">
          <i class="fas fa-tasks"></i>
          <span>Workflows</span>
        </a>
      </li>
    </ul>
    <div class="nav-footer">
      <a href="/logout" class="logout-btn">
        <i class="fas fa-sign-out-alt"></i>
        <span>Logout</span>
      </a>
    </div>
  </nav>

  <div class="project-form-container">
    <div class="form-header">
      <h2><i class="fas fa-folder-plus"></i> Add New Project</h2>
    </div>

    <% if (typeof success !== 'undefined') { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <% if (typeof error !== 'undefined') { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <form id="addProjectForm" action="/projects/add" method="POST">
      <div class="mb-4">
        <label for="projectName" class="form-label">Project Name</label>
        <input type="text" class="form-control" id="projectName" name="projectName" required
               placeholder="Enter project name">
        <div class="invalid-feedback">Please provide a project name.</div>
      </div>

      <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
        <button type="button" class="btn btn-outline-secondary" onclick="window.history.back()">
          <i class="fas fa-arrow-left"></i> Cancel
        </button>
        <button type="submit" class="btn btn-primary" id="submitBtn">
          <i class="fas fa-plus-circle"></i> Add Project
        </button>
      </div>
    </form>
  </div>

  <!-- Toast Notification -->
  <div class="toast-container">
    <div id="successToast" class="toast align-items-center text-white bg-success" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">
          <i class="fas fa-check-circle me-2"></i>
          <span id="toastMessage">Project added successfully!</span>
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  </div>

  <!-- Success Modal -->
  <div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-body text-center py-5">
          <div class="mb-4">
            <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
          </div>
          <h4 class="modal-title mb-3" id="successModalLabel">Success!</h4>
          <p class="text-muted mb-4">Project has been added successfully. You will be redirected shortly.</p>
          <div class="spinner-border text-success" role="status" style="width: 2rem; height: 2rem;">
            <span class="visually-hidden">Loading...</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/project.js"></script>
</body>
</html>